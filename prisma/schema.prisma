generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  avatar     String?
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  @@map("users")
}

model Category {
  id   String @id @default(uuid())
  name String
  slug String

  products Product[]

  @@map("categories")
}

model Product {
  id                 String  @id @default(uuid())
  name               String
  description        String
  imageURL           String
  basePrice          Decimal @db.Decimal(10, 2)
  discountPercentage Int     @default(0)

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  @@map("products")
}
