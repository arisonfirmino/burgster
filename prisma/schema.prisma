generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  avatar     String?
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  @@map("users")
}

model Category {
  id   String @id @default(uuid()) @map("_id")
  name String
  slug String

  @@map("categories")
}
